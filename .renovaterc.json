{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:base",
    ":label(renovate)",
    ":timezone(Asia/Tokyo)"
  ],
  "customManagers": [
    {
      "customType": "regex",
      "fileMatch": [
        "^\\.github\\/workflows\\/.*\\.yml$"
      ],
      "matchStrings": [
        "apt-get\\s+(?:--yes\\s+)?install\\s+(?<depName>\\S+)=(?<currentValue>\\S+)"
      ],
      "depNameTemplate": "{{depName}}",
      "datasourceTemplate": "deb",
      "versioningTemplate": "ubuntu",
      "registryUrlTemplate": "http://azure.archive.ubuntu.com/ubuntu",
      "autoReplaceStringTemplate": "apt-get --yes install {{depName}}={{currentValue}}"
    }
  ]
}
