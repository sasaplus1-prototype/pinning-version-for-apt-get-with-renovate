{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:base",
    ":label(renovate)",
    ":timezone(Asia/Tokyo)"
  ],
  "customManagers": [
    {
      "customType": "regex",
      "fileMatch": [
        "^\\.github\\/workflows\\/.*\\.yml$"
      ],
      "matchStrings": [
        "apt-get\\s+(?:--yes\\s+)?install\\s+fonts-noto=(?<currentValue>\\S+)"
      ],
      "depNameTemplate": "fonts-noto",
      "datasourceTemplate": "deb",
      "versioningTemplate": "deb",
      "autoReplaceStringTemplate": "apt-get --yes install fonts-mono={{currentValue}}"
    }
  ]
}
