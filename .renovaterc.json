{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:base",
    ":label(renovate)",
    ":timezone(Asia/Tokyo)"
  ],
  "customManagers": [
    {
      "customType": "regex",
      "fileMatch": [
        "^\\.github\\/workflows\\/.*\\.yml$"
      ],
      "matchStrings": [
        "apt-get\\s+--yes\\s+install\\s+(?<depName>\\S+)=(?<currentValue>\\S+)"
      ],
      "registryUrlTemplate": "http://archive.ubuntu.com/ubuntu?release=focal,focal-updates,focal-security,focal-backports&components=main,restricted,universe,multiverse&binaryArch=amd64",
      "datasourceTemplate": "deb"
    }
  ]
}
